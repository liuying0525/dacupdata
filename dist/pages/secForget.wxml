
    <view class="secForget">
        <view class="header">
            <image src="{{url_link?url_link+'/loginLogo.png': ''}}"/>
        </view>
        <view class="inputBox">
            <input type="number" placeholder="请输入手机号" data-name="phone" maxlength="11" value="{{phone}}" bindinput="changeValue"/>
            <view class="errorInfo">*登录手机号须与贷款合同填写手机号保持一致</view>
        </view>
        <view class="inputBox">
            <input type="text" class="codeInput" placeholder="请输入验证码" data-name="code" value="{{code}}" bindinput="changeValue"/>
            <view class="codeBtn {{getCodeTime > 0 ? 'codeBtnNo' : ''}}" bindtap="getCode">{{getCodeTime > 0 ? getCodeTime + 's后可重新获取' : '获取验证码'}}</view>
        </view>
        <view class="inputBox">
            <input type="password" placeholder="请输入新密码" data-name="password1" value="{{password1}}" bindinput="changeValue"/>
        </view>
        <view class="inputBox">
            <input type="password" placeholder="请确认新密码" data-name="password2" value="{{password2}}" bindinput="changeValue"/>
        </view>
        <view class="inputBox" style="margin-bottom: 26rpx;">
            <view class="button" bindtap="reset">重置密码</view>
        </view>
        <view class="inputBox">
            <text class="forget" bindtap="goRegister">立即注册</text>
            <text class="register" bindtap="goLogin">去登录</text>
        </view>
    </view>
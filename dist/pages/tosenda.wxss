.tosendaBox view,
.tosendaBox input {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.tosendaBox .tosendatop {
  width: 100%;
  height: 196rpx;
  line-height: 196rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
}
.tosendaBox .tosendacenter {
  padding: 32rpx 78rpx;
  font-size: 24rpx;
  width: 100%;
  background-color: #f4f6fa;
}
.tosendaBox .titleInfo {
  font-size: 24rpx;
  line-height: 46rpx;
  margin-bottom: 55rpx;
}
.tosendaBox .titleInfo .titlestatut {
  font-size: 28rpx;
  margin-bottom: 33rpx;
}
.tosendaBox .titleInfo text {
  color: #ff0000;
}
.tosendaBox .titleInfo text:nth-of-type(1) {
  font-weight: bold;
}
.tosendaBox .information {
  line-height: 58rpx;
  font-size: 24rpx;
  display: flex;
}
.tosendaBox .information > view {
  margin-right: 15rpx;
}
.tosendaBox .tosendabottom {
  font-size: 24rpx;
  padding: 40rpx 0 0 78rpx;
  line-height: 58rpx;
}
.tosendaBox .postbottom {
  padding: 45rpx 30rpx 0;
  width: 100%;
}
.tosendaBox .postBox {
  display: flex;
  flex-flow: column;
  box-shadow: 0 0 10rpx 4rpx rgba(116, 110, 139, 0.17);
}
.tosendaBox .postBox .posttitle {
  height: 64rpx;
  line-height: 64rpx;
  color: #fff;
  font-size: 24rpx;
  padding-left: 46rpx;
  background-color: #672ae3;
  border-radius: 4rpx;
}
.tosendaBox .postBox .postcontent {
  padding-top: 69rpx;
}
.tosendaBox .postBox .postcontent .postitem {
  display: flex;
  padding-left: 23rpx;
  padding-right: 23rpx;
}
.tosendaBox .postBox .postcontent .postitem > view {
  display: flex;
  flex-flow: column;
}
.tosendaBox .postBox .postcontent .postitem > view.itemleft {
  width: 89rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemleft .first {
  font-size: 16rpx;
  color: #131313;
  line-height: 28rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemleft .last {
  font-size: 13rpx;
  color: #676767;
  line-height: 40rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemright {
  color: #909090;
  border-left: 1px solid #817f7f;
  position: relative;
  padding-bottom: 60rpx;
  flex: 1;
  padding-left: 30rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemright .first {
  font-size: 26rpx;
  line-height: 37rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemright .last {
  font-size: 18rpx;
  line-height: 28rpx;
}
.tosendaBox .postBox .postcontent .postitem > view.itemright:after {
  content: '';
  display: block;
  height: 22rpx;
  width: 22rpx;
  border-radius: 50%;
  background-color: #a8a8a8;
  position: absolute;
  top: 5rpx;
  left: -11rpx;
}
.tosendaBox .postBox .postcontent .postitem:nth-of-type(1) .itemleft .first {
  margin-top: -5rpx;
}
.tosendaBox .postBox .postcontent .postitem:nth-of-type(1) .itemright > view:nth-of-type(1) {
  margin-top: -10rpx;
}
.tosendaBox .postBox .postcontent .postitem:nth-of-type(1) .itemright:after {
  content: '';
  display: block;
  height: 22rpx;
  width: 22rpx;
  border-radius: 50%;
  background-color: #672ae3;
  position: absolute;
  top: 0;
  left: -11rpx;
}

.cardUpBook {
  padding-top: 110rpx;
}
.cardUpBook .titles {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  text-align: center;
  background: #fff;
  padding: 40rpx 0 10rpx;
  z-index: 100;
}
.cardUpBook .title {
  font-size: 30rpx;
  color: #4b4b4b;
  padding-bottom: 12rpx;
  border-bottom: 8rpx solid #fff;
  margin: 0 auto;
  max-width: 220rpx;
  flex: 1.0;
}
.cardUpBook .activeTitle {
  color: #6044ca;
  border-color: #6044ca;
}
.cardUpBook .bookImg {
  display: block;
  height: 698rpx;
  width: 560rpx;
  margin: 0 auto;
  background: #cacfd5;
}
.cardUpBook .bookBox {
  position: relative;
  height: 860rpx;
  width: 647rpx;
  margin: 0 auto;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding: 80rpx 43rpx 0;
  -webkit-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
}
.cardUpBook .textInfo {
  font-size: 22rpx;
  color: #767373;
  line-height: 36rpx;
  margin-top: 15rpx;
}
.cardUpBook .saveBtn {
  font-size: 30rpx;
  color: #7b60e2;
  text-align: center;
  margin-top: 30rpx;
}
.cardUpBook .nextBtn {
  width: 545rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #6044cb;
  color: #fff;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;
  border-radius: 6rpx;
  margin: 50rpx auto 0;
}
.cardUpBook .waitBtn {
  width: 545rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  margin: 0 auto;
  color: #767373;
  font-size: 24rpx;
}
.cardUpBook .addBtn {
  width: 174rpx;
  height: 300rpx;
  margin: 255rpx auto 0;
  text-align: center;
  color: #767373;
  font-size: 27rpx;
}
.cardUpBook .addBtn image {
  height: 174rpx;
  width: 174rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  background: silver;
  margin-bottom: 32rpx;
}
.cardUpBook .delete {
  position: absolute;
  top: 46rpx;
  right: 16rpx;
  height: 60rpx;
  width: 60rpx;
}

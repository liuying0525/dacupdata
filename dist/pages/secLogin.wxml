
  <view class="secLogin">
    <view class="goMy" bindtap="goMy"  wx:if="{{backUrl!=''&&backUrl!='my'}}">个人中心</view>
    <view class="header">
      <image src="{{url_link?url_link+'/loginLogo.png': ''}}"/>
    </view>
    <view class="inputBox">
      <input type="number" placeholder="请输入手机号" maxlength="11" data-name="phone" value="{{phone}}" bindinput="changeValue"/>
      <view class="errorInfo">*登录手机号须与贷款合同填写手机号保持一致</view>
    </view>
    <view class="inputBox">
      <input type="password" placeholder="请输入密码" data-name="password" value="{{password}}" bindinput="changeValue"/>
    </view>
    <view class="inputBox">
      <input type="text" class="codeInput" placeholder="请输入验证码" data-name="code" value="{{code}}" bindinput="changeValue"/>
      <view class="codeBtn {{getCodeTime !=60 ? 'codeBtnNo' : ''}}" bindtap="getCode">{{getCodeTime != 60 ? getCodeTime + 's后可重新获取': '获取验证码'}}</view>
    </view>
    <view class="inputBox" style="margin-bottom: 26rpx;">
      <view class="button" bindtap="login">登录</view>
    </view>
    <view class="inputBox">
      <text class="forget" bindtap="goForget">忘记密码</text>
      <text class="register" bindtap="goRegister">注册新账号</text>
    </view>
  </view>
/**index.wxss**/
page {
  width: 100%;
  margin: 0 auto;
  background: #eee;
  height: 100%;
}
.brand {
  width: 100%;
  background: #5c45c3;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  position: fixed;
  top: 0;
}
.leave {
  width: 100%;
  height: 120rpx;
}
.opinion-textarea {
  width: 90%;
  height: 50rpx;
  background: #fff;
  border: 2rpx #5c45c3 solid;
  font-size: 24rpx;
  margin-bottom: 5rpx;
  line-height: 20pt;
  border-radius: 4pt;
  margin: 0 auto;
  padding-left: 20rpx;
}
.brand-list {
  display: flex;
  background: #fff;
  /* border-bottom: 4rpx #f2f2f2 solid   */
  margin-bottom: 14rpx;
}
.brand-list-img {
  /* display: flex */
  width: 300rpx;
}
.widget__arrow {
  width: 300rpx;
  height: 250rpx;
}
.widget__arrow img {
  width: 100%;
  height: 100%;
}
.brand-list-details {
  margin-left: 40rpx;
  padding-top: 34rpx;
}
.brand-list-details1 {
  font-size: 34rpx;
  font-weight: 700;
}
.brand-list-details2 {
  font-weight: 900;
}
.brand-list-details2,
.brand-list-details3,
.brand-list-details4,
.brand-list-details5 {
  font-size: 24rpx;
  line-height: 45rpx;
}
.brand-list-textone {
  margin-right: 20rpx;
  width: 110rpx;
  /* height: 50rpx; */
  background: #5c45c3;
  display: inline-block;
  text-align: center;
  line-height: 35rpx;
  border-radius: 8rpx;
  color: #fff;
  font-size: 22rpx;
}
.brand-list-texttow {
  width: 110rpx;
  /* height: 50rpx; */
  background: #00c7ae;
  display: inline-block;
  text-align: center;
  line-height: 35rpx;
  border-radius: 8rpx;
  color: #fff;
  margin-left: 15rpx;
  font-size: 22rpx;
}
.brand-list-three {
  margin-left: 25rpx;
}
.brand-list-four {
  color: red;
  font-weight: 900;
  font-size: 28rpx;
}
.brand-list-five {
  color: red;
  margin-left: 40rpx;
}
.barand-one {
  background: #eee;
  overflow-x: hidden;
}
.img {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.brand-list-textone1 {
  font-size: 22rpx;
  display: inline-block;
  padding: 0 10rpx;
  text-align: center;
  line-height: 34rpx;
  border: 2rpx #00c7ae solid;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}
.content {
  display: flex;
  margin-bottom: 14rpx;
  margin-left: -50px;
  margin-right: 0;
  width: 100%;
  padding: 28rpx;
  line-height: 22px;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(50px);
  transform: translateX(50px);
  box-sizing: border-box;
  background: #fff;
}
.del {
  background-color: #999999;
  width: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(50px);
  transform: translateX(50px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.kong {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.kong-image1 {
  width: 250rpx;
  height: 40rpx;
  position: absolute;
  left: 50%;
  top: 30%;
  margin-left: -116rpx;
  margin-top: -20rpx;
}
.kong-image2 {
  width: 250rpx;
  height: 40rpx;
  position: absolute;
  left: 50%;
  top: 55%;
  margin-left: -116rpx;
  margin-top: -20rpx;
}
.cs {
  text-align: center;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.scheme-tow {
  width: auto;
  padding: 0 15rpx 0 15rpx;
  background-color: #00c7ae;
  text-align: center;
  line-height: 38rpx;
  font-size: 22rpx;
  color: #ffffff;
  border-radius: 8rpx;
  display: inline-block;
}

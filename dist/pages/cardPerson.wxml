        <!--</view>-->
      <!--</view>-->
      <view class="textItem">
        <text>合同信息</text>
        <picker value="{{contractnum}}" range="{{contracts}}" bindchange="selectContract">
          <view class="picker">
            <text class="earlyTime">{{contractnum}}</text>
          </view>
        </picker>
      </view>
    </view>
    <view class="earlyBtn {{canSubmit? '': 'earlyNoBtn'}}" bindtap="submit">下一步</view>
  </view>
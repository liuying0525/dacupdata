
  <view class="earlyRepaymentS">
    <view class="earlyRepaymentSt">
      <view class="title">客户信息录入</view>
      <view class="textItemPic">
        <text class="picText">新卡照片</text>
        <view class="picBox">
          <view class="pic" bindtap="chooseImg" data-wpychooseimg-a="{{'newccardurl'}}">
            <text>+</text>
            <image src="{{newccardurl}}" mode="aspectFit"/>
          </view>
        </view>
      </view>
      <view class="textItemPic">
        <text class="picText">身份证照片</text>
        <view class="picBox">
          <view class="pic" bindtap="chooseImg" data-wpychooseimg-a="{{'cardHead'}}">
            <text>+</text>
            <image src="{{cardHead}}" mode="aspectFit"/>
          </view>
          <view class="pic" style="float: right;" bindtap="chooseImg" data-wpychooseimg-a="{{'cardTail'}}">
            <text>+</text>
            <image src="{{cardTail}}" mode="aspectFit"/>
          </view>
        </view>
      </view>
      <view class="textItem">
        <text>新卡卡号</text><input type="number" data-name="cardNum" value="{{cardNum}}" bindinput="changeValue" placeholder="请输入银行卡号"/>
        <view class="errorInfo">*仅支持建行，工行</view>
      </view>
      <view class="textItem">
        <text>新卡银行</text>
        <picker value="{{cardType}}" range="{{typeList}}" bindchange="typeChange">
          <input type="number" data-name="cardName" value="{{cardType}}" placeholder="点击选择银行" disabled="true"/>
        </picker>
      </view>
      <view class="textItem">
        <text>客户姓名</text><input type="text" data-name="name" value="{{name}}" bindinput="changeValue" disabled="true" placeholder="请输入客户姓名"/>
      </view>
      <view class="textItem">
        <text>手机号</text><input type="number" data-name="phone" value="{{phone}}" bindinput="changeValue" disabled="true" placeholder="请输入客户手机号"/>
      </view>

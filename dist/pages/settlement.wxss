.settlementBox {
  padding: 7rpx 50rpx 46rpx;
}
.settlementBox view,
.settlementBox input {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.settlementBox .earlyStatut {
  height: 85rpx;
  line-height: 85rpx;
  font-size: 26rpx;
  padding: 0 43rpx;
  border-bottom: 1px solid #c5c5c5;
  display: flex;
  justify-content: space-between;
}
.settlementBox .noData {
  width: 500rpx;
  margin: 300rpx auto;
}
.settlementBox .noData image {
  display: block;
  height: 252rpx;
  width: 309rpx;
  margin: 0 auto;
}
.settlementBox .noData .textInfo {
  text-align: center;
  font-size: 36rpx;
  line-height: 120rpx;
}
.settlementBox .settlementList {
  -webkit-box-shadow: 0 0 10rpx 4rpx rgba(116, 110, 139, 0.17);
  -moz-box-shadow: 0 0 10rpx 4rpx rgba(116, 110, 139, 0.17);
  box-shadow: 0 0 10rpx 4rpx rgba(116, 110, 139, 0.17);
  margin-bottom: 67rpx;
  margin-top: 34rpx;
  border-radius: 4rpx;
}
.settlementBox .earlyItem {
  position: relative;
  padding: 34rpx 43rpx 50rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.settlementBox .earlyItem .textItem {
  width: 100%;
  font-size: 26rpx;
  margin-bottom: 44rpx;
  display: flex;
  justify-content: space-between;
}
.settlementBox .earlyItem .textItem > view {
  color: #494949;
  width: 50%;
}
.settlementBox .earlyItem .textItem > text {
  color: #000;
  text-align: right;
}
.settlementBox .earlyItem .changeBtn {
  width: 176rpx;
  height: 46rpx;
  line-height: 46rpx;
  color: #fff;
  background: #6044cb;
  text-align: center;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;
  border-radius: 6rpx;
  margin-right: 66rpx;
  padding: 4rpx 10rpx;
  border: 1px solid #6044cb;
}
.settlementBox .earlyItem .cancelBtn {
  width: 176rpx;
  height: 46rpx;
  line-height: 46rpx;
  color: #fff;
  background: #6044cb;
  text-align: center;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;
  border-radius: 6rpx;
  margin-right: 66rpx;
  padding: 4rpx 10rpx;
  border: 1px solid #6044cb;
  color: #6044cb;
  background: #fff;
  float: left;
  margin: 0;
}
.settlementBox .earlyItem .editBtn {
  background: #6044cb;
  color: #fff;
  float: left;
}
.settlementBox .earlyItem .itemState {
  position: absolute;
  right: 32rpx;
  bottom: 140rpx;
}
.settlementBox .earlyItem .itemState image {
  height: 105rpx ;
  width: 139rpx;
}
.settlementBox .contractNo {
  font-size: 20rpx;
  font-weight: bold;
  color: #000;
}
.settlementBox .statut {
  font-size: 24rpx;
  font-weight: bold;
  color: #ff0000;
}

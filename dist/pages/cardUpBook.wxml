
    <view class="cardUpBook">
        <view class="titles">
            <view class="title {{imgType==='authorizationFile'?'activeTitle':''}}" bindtap="changeState" data-wpychangestate-a="authorizationFile">扣款授权书</view>
            <view class="title {{imgType==='stopAuthorizationFile'?'activeTitle':''}}" bindtap="changeState" data-wpychangestate-a="stopAuthorizationFile">终止划扣授权书</view>
        </view>
        <view class="bookBox">
            <image class="bookImg" src="{{imgSrc}}" mode="aspectFit"  wx:if="{{imgSrc!==''}}"/>
            <image src="{{url_link?url_link + '/delete.png':''}}" class="delete"  wx:if="{{imgSrc!==''}}" bindtap="deleteImg"/>
            <view class="addBtn" bindtap="getBook" wx:if="{{imgSrc===''}}">
                <image/>
                <text>点击上传</text>
            </view>
        </view>
        <view class="nextBtn" bindtap="upBook">提交</view>
    </view>
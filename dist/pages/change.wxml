
  <view class="testresult">
    <userinfo_alert  v-on:childFn="alert_userinfo" text_zhi="东正请求授权登录"/>
    <alert_l  v-on:childFn="alert_tel" text_zhi="东正金融请求授权手机号"/>
    <view class="opinion">
      <form bindsubmit="formSubmit">
        <input name="code" type="number" placeholder="请输入新手机号" maxlength="11" class="opinion-textarea" bindinput="userNameInput" placeholder-class="opinion-center" value="{{code}}"/>
        <view class="change-kuan">
          <input class="change-mima " name="password" type="number" placeholder="请输入验证码" maxlength="6" bindinput="passWdInput" placeholder-class="opinion-center"/>
          <view class="change-yzm" bindtap="getVerificationCode"  wx:if="{{!second_show}}">获取验证码</view>
          <view wx-if="{{ second_show }}" class="timeBack">{{ second }}s</view>
        </view>
        <button formType="submit" class="opinion-button">确认修改</button>
      </form>
    </view>
  </view>
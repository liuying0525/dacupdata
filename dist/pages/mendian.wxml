
  <view class="mendian">
    <view class="quian">
      <view>全国</view>
      <view>共{{dsas}}家门店</view>
    </view>

    <view class="menu-cont">
      <!-- 左侧菜单 -->
      <scroll-view class="menu-l" scroll-y scroll-with-animation="scroll-with-animation" style="height: {{menuHeight}}">
        <view class="city-list">
          <text  wx:for="{{dsa}}" wx:key="{{item.business_partner_id}}" class="city-item {{index === scrollNum ? 'active' : ''}}" data-viewid="{{item.state_namepinyin}}" bindtap="selectCity">{{item.state_name}}</text>
        </view>
      </scroll-view>
      <!-- 右侧菜单 -->
      <scroll-view class="menu-r" scroll-y scroll-with-animation="scroll-with-animation" scroll-into-view="{{viewid}}" scroll-top="{{scrollTop}}" bindscroll="goodsScrollAct" style="height: {{menuHeight}}">
        <view  wx:for="{{dsa}}" wx:key="key" id="{{item.state_namepinyin}}">
          <view class="cs">{{item.state_name}}</view>
          <view class="cs-di" wx:for="{{item.city}}" wx:key="key" wx:for-item="city" bindtap="mendian" data-wpymendian-a="{{city.business_partner_nme}}" data-wpymendian-b="{{city.buildingname}}" data-wpymendian-c="{{city.state_name}}" data-wpymendian-d="{{city.businessid}}">
            <view class="order-te3e">
              <view class="order-te4">{{city.business_partner_nme}}</view>
              <view class="order-te5">{{city.buildingname}}</view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    
  </view>
.earlyRepaymentS {
  padding: 46rpx 50rpx;
}
.earlyRepaymentS view,
.earlyRepaymentS input {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.earlyRepaymentS .earlyRepaymentSt {
  padding: 0 58rpx 30rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
}
.earlyRepaymentS .earlyRepaymentSt .title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  margin-bottom: 10rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem {
  position: relative;
  width: 100%;
  height: 56rpx;
  font-size: 26rpx;
  margin-bottom: 44rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem text {
  float: left;
  line-height: 56rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .early {
  color: #6044cb;
  position: relative;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .earlyHelp {
  position: absolute;
  display: block;
  right: -30rpx;
  top: -10rpx;
  line-height: 26rpx;
  width: 26rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  text-align: center;
  border: 1px solid #6044cb;
  font-size: 20rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .earlyTime {
  height: 56rpx;
  padding: 0 20rpx;
  margin-left: 40rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem input {
  float: right;
  height: 56rpx;
  border: 1px solid #ddd;
  width: 370rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .phoneCode {
  width: 184rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .getCode {
  width: 170rpx;
  float: right;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
  background: #6144cb;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  border-radius: 10rpx;
  margin-left: 16rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .getNoCode {
  background: #e5e5e5;
  color: #000;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .picCode {
  width: 170rpx;
  float: right;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
  background: #6144cb;
  margin-left: 16rpx;
  border: 1px solid #ddd;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  border-radius: 10rpx;
  background: #fff;
}
.earlyRepaymentS .earlyRepaymentSt .textItem .picCode image {
  display: block;
  width: 100%;
  height: 54rpx;
}
.earlyRepaymentS .earlyRepaymentSt .textItemInfos {
  position: absolute;
  line-height: 56rpx;
  border: 1px solid #e5e5e5;
  border-bottom: none;
  border-top: none;
  width: 370rpx;
  font-size: 24rpx;
  right: 0;
  top: 56rpx;
  z-index: 100;
}
.earlyRepaymentS .earlyRepaymentSt .textItemInfos .textItemInfo {
  height: 56rpx;
  border-bottom: 1px solid #e5e5e5;
  font-size: 20rpx;
  color: #393939;
  background: #fff;
  /*text-align: center;*/
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
}
.earlyRepaymentS .earlyBtn {
  width: 546rpx;
  height: 74rpx;
  line-height: 74rpx;
  color: #fff;
  background: #6044cb;
  font-size: 30rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  border-radius: 10rpx;
  margin: 86rpx auto 0;
  text-align: center;
}
.earlyRepaymentS .earlyNoBtn {
  width: 546rpx;
  height: 74rpx;
  line-height: 74rpx;
  color: #fff;
  background: #6044cb;
  font-size: 30rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  border-radius: 10rpx;
  margin: 86rpx auto 0;
  text-align: center;
  background: #e5e5e5;
  color: #000;
}
.earlyRepaymentS .earlyInfo {
  width: 546rpx;
  margin: 30rpx auto 0;
  font-size: 22rpx;
  color: #595959;
}
.earlyRepaymentS .colorRed {
  float: none;
  color: #ff0000;
  font-size: 20.52rpx;
  padding-left: 51.92rpx;
}
.earlyRepaymentS .earlyTime {
  float: none;
  color: #000 !important;
  font-size: 20.52rpx;
  padding-left: 51.92rpx;
}

.sendInformationBox {
  padding: 70rpx 78rpx 0;
  min-height: 100%;
}
.sendInformationBox view,
.sendInformationBox input {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.sendInformationBox .titleInfo {
  font-size: 24rpx;
  line-height: 46rpx;
  margin-bottom: 55rpx;
}
.sendInformationBox .titleInfo .titlestatut {
  font-size: 28rpx;
  margin-bottom: 33rpx;
}
.sendInformationBox .titleInfo text {
  color: #ff0000;
}
.sendInformationBox .titleInfo text:nth-of-type(1) {
  font-weight: bold;
}
.sendInformationBox .information {
  line-height: 78rpx;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}
.sendInformationBox .information input {
  line-height: 50rpx;
  height: 50rpx;
  width: 100%;
  border-bottom: 1px solid #000;
  font-size: 24rpx;
}
.sendInformationBox .gray {
  color: #817f7f;
}
.sendInformationBox picker {
  margin-bottom: 64rpx;
  border-bottom: 1px solid #000;
}
.sendInformationBox .modal {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.sendInformationBox .modal-content {
  width: 80%;
  margin-left: 10%;
  margin-top: 40%;
  min-height: 300rpx;
  background: #fff;
  position: relative;
  border-radius: 10rpx;
  padding: 60rpx 0 0;
}
.sendInformationBox .modal-content .modal-top {
  font-size: 22rpx;
  line-height: 40rpx;
  color: red;
  padding-left: 35rpx;
  display: flex;
}
.sendInformationBox .modal-content .modal-top icon {
  margin-right: 22rpx;
  display: flex;
}
.sendInformationBox .modal-content .modal-body {
  font-size: 28rpx;
  line-height: 54rpx;
  padding: 30rpx 0 40rpx 95rpx;
}
.sendInformationBox .modal-content .modal-footer {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx #bfbfbf solid;
  display: flex;
}
.sendInformationBox .modal-content .modal-footer > text {
  width: 50%;
  text-align: center;
  color: #757575;
}
.sendInformationBox .modal-content .modal-footer > text:nth-of-type(1) {
  color: #2a2a2a;
  border-right: 1rpx #bfbfbf solid;
}
.sendInformationBox .show-btn {
  width: 510rpx;
  height: 69rpx;
  margin: 153rpx auto 452rpx;
  background: #6044cb;
  border-radius: 4rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 69rpx;
  text-align: center;
}

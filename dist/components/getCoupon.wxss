.getCoupon {
  position: fixed;
  top: 0;
  z-index: 1000;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.couponBox {
  position: relative;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  padding-top: 57rpx;
  width: 613rpx;
  height: 495rpx;
  -webkit-border-radius: 30rpx;
  -moz-border-radius: 30rpx;
  border-radius: 30rpx;
  background: #f0f1f5;
  margin: 270rpx auto 0;
}
.couponBox .couponTitle {
  font-size: 28rpx;
  text-align: center;
}
.couponBox .coupon {
  width: 561rpx;
  height: 180rpx;
  /*background:pink;*/
  margin: 30rpx auto 0;
  -webkit-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  -moz-box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  box-shadow: 0 0 16rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
}
.couponBox .couponL {
  flex: 6;
  padding: 12rpx 40rpx 12rpx 40rpx ;
  background: url("https://webapi.dongzhengafc.com:9503/images/dhSec00.png") no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}
.couponBox .couponL .title {
  font-size: 28rpx;
  color: #5c5c5c;
}
.couponBox .couponL .time {
  font-size: 18rpx;
  color: #737373;
  margin: 6rpx 0;
}
.couponBox .couponL .limit {
  font-size: 18rpx;
  color: #a6a5a5;
}
.couponBox .couponR {
  flex: 4;
  background: url("https://webapi.dongzhengafc.com:9503/images/dhSec01.png") no-repeat center;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
}
.couponBox .couponR .money {
  font-size: 42rpx;
  color: #fff;
  line-height: 177rpx;
  text-align: center;
}
.couponBox .stateText {
  font-size: 22rpx;
  color: #7b7b7d;
  text-align: center;
  margin: 37rpx 0 46rpx;
}
.couponBox .seeBtn {
  width: 350rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  margin: 0 auto;
  background: #6044cb;
  -webkit-border-radius: 4rpx;
  -moz-border-radius: 4rpx;
  border-radius: 4rpx;
}
.couponBox .closeBtn {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 50rpx;
}
